<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CirclePageIndicator">
        <attr name="indicator_icon" format="reference" />
        <attr name="indicator_margin" format="dimension" />
        <attr name="indicator_smooth" format="enum">
            <enum name="smooth" value="0" />
            <enum name="normal" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ExpandableTextViewAttr">
        <!-- 允许显示最大行数 -->
        <attr name="maxExpandLines" format="integer"></attr>
        <!-- 动画执行时间 -->
        <attr name="duration" format="integer"></attr>
    </declare-styleable>
</resources>