<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_text_bg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_distance">

        <TextView
            android:id="@+id/tvAlertDialogTitle"
            style="@style/text_huge_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="@dimen/item_left_tv_padding"
            android:text="Title" />

        <TextView
            android:id="@+id/tvAlertDialogMessage"
            style="@style/text_middle"
            android:layout_marginLeft="@dimen/item_left_tv_padding"
            android:layout_marginRight="@dimen/item_left_tv_padding"
            android:layout_marginBottom="@dimen/item_left_tv_padding"
            android:gravity="left|top"
            android:textColor="@color/gray_4" />
    </LinearLayout>

    <!--<View style="@style/divider_horizontal_1px" />-->

    <LinearLayout style="@style/ll_horizontal_match_wrap">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnAlertDialogNegative"
            style="@style/text_middle"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:padding="@dimen/item_distance"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="visible" />

        <!--<View style="@style/divider_vertical_1px" />-->

        <Button
            android:id="@+id/btnAlertDialogPositive"
            style="@style/text_middle_black"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:padding="@dimen/item_distance"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>