<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="#F07798" />
            <!--设置渐变-->
            <!--<gradient android:startColor="@color/colorPrimary"-->
            <!--android:endColor="@color/colorPrimary"-->
            <!--android:angle="180"/>-->
            <!--angle控制渐变的方向-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners
                android:bottomLeftRadius="@dimen/dp_40"
                android:topLeftRadius="@dimen/dp_40"
                android:topRightRadius="@dimen/dp_40" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#F07798" />
            <!-- android:radius 弧形的半径 -->
            <corners
                android:bottomLeftRadius="@dimen/dp_40"
                android:topLeftRadius="@dimen/dp_40"
                android:topRightRadius="@dimen/dp_40" />
        </shape>
    </item>
</layer-list>